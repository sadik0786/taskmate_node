<configuration>
  <system.webServer>
    <!-- Remove WebDAV to allow PUT/DELETE -->
    <modules>
      <remove name="WebDAVModule" />
    </modules>

    <handlers>
      <!-- Remove WebDAV handler -->
      <remove name="WebDAV" />
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>

    <iisnode nodeProcessCommandLine="C:\Program Files\nodejs\node.exe" />

    <rewrite>
      <rules>
        <rule name="NodeApp" stopProcessing="true">
          <match url=".*" />
          <action type="Rewrite" url="server.js" />
        </rule>
      </rules>
    </rewrite>

    <!-- Static content settings -->
    <staticContent>
      <!-- Serve uploads folder correctly -->
      <mimeMap fileExtension=".*" mimeType="application/octet-stream" />
    </staticContent>
    <directoryBrowse enabled="true" />

    <security>
      <requestFiltering>
        <!-- Allow PUT, DELETE, PATCH methods -->
        <verbs allowUnlisted="true">
          <add verb="PUT" allowed="true" />
          <add verb="DELETE" allowed="true" />
          <add verb="PATCH" allowed="true" />
        </verbs>
        <hiddenSegments>
          <add segment="node_modules" />
        </hiddenSegments>
      </requestFiltering>
    </security>

    <!-- CORS Headers -->
    <httpProtocol>
      <customHeaders>
        <add name="Access-Control-Allow-Origin" value="*" />
        <add name="Access-Control-Allow-Methods" value="GET,POST,PUT,DELETE,PATCH,OPTIONS" />
        <add name="Access-Control-Allow-Headers" value="Content-Type,Authorization" />
      </customHeaders>
    </httpProtocol>

    <!-- iisnode logging -->
    <iisnode loggingEnabled="true" logDirectoryName="iisnode" />
  </system.webServer>

    <!-- Optional: node_env -->
  <appSettings>
    <add key="NODE_ENV" value="development" />
  </appSettings>
</configuration>